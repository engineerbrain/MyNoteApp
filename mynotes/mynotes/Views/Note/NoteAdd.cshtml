@model mynotes.Models.NoteRequestModel


<h2>Not Ekle</h2>

<form asp-action="NoteAdd" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <input asp-for="AccountId" value="@ViewBag.AccountId" class="form-control" style="display:none" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Not Ekle" class="btn btn-primary" />
    </div>
</form>
